    <section class="contact wow fadeIn">
      <div class="wrap subscribe">
        <h2 class="ylw sngl">Subscribe for updates</h2>
        <div id="subscribe_box" class="half">
          <form id="form" class="" role="form">
            <div style="margin-top:10px">
              <p>How would you like to subscribe?</p>
              <div class="form-group">
                <a href="#emailbox" onClick="$('#subscribe_box').hide(); $('#emailbox').show()"><i class="fa fa-envelope-o"></i>   Email</a>
                <a href="#phonebox" onClick="$('#subscribe_box').hide(); $('#phonebox').show()"><i class="fa fa-mobile"></i>   SMS</a>
                <a href="#bothbox" onClick="$('#subscribe_box').hide(); $('#bothbox').show()"><i class="fa fa-envelope-o"></i> &amp; <i class="fa fa-mobile"></i></a>
              </div>
            </div>   
          </form>  
        </div>
        
        <div id="emailbox" class="half" style="display:none;">
          <form id="email_form" class="form-control" role="form" action="/api/emailsubscribers" method="post" onsubmit="return ValidateEmail()">
          <!-- <input type="text" placeholder="Your name" required="required"> -->
            <input id="email" type="email" name="email" placeholder="Enter Email Addresss" required="required">
            <small class="form-text text-muted">We'll never share your details with anyone else.</small><br>
            <input id="email_check" type="checkbox"> I agree to receive promotional messages from Cosmos Jaipur
            <input type="submit" val="Subscribe">
            <a href="#subscribe_box" onClick="$('#emailbox').hide(); $('#subscribe_box').show()"><i class="fa fa-toggle-left"></i> Choose another method</a>
          </form>
        </div>
        
        <div id="phonebox" class="half" style="display:none;">
          <form id="phone_form" class="form-control" role="form" action="/api/phonesubscribers" method="post" onsubmit="return ValidatePhone()">
          <!-- <input type="text" placeholder="Your name" required="required"> -->
            <input id="phone" type="number" name="email" placeholder="Enter Mobile Number" required="required">
            <small class="form-text text-muted">We'll never share your details with anyone else.</small><br>
            <input id="phone_check" type="checkbox"> I agree to receive promotional messages from Cosmos Jaipur
            <input type="submit" val="Subscribe">
            <a href="#subscribe_box" onClick="$('#phonebox').hide(); $('#subscribe_box').show()"><i class="fa fa-toggle-left"></i> Choose another method</a>
          </form>
        </div>
        
        <div id="bothbox" class="half" style="display:none;">
          <form id="form" class="form-control" role="form" action="/api/subscribers" method="post" onsubmit="return ValidateBoth()">
          <!-- <input type="text" placeholder="Your name" required="required"> -->
            <input id="email" type="email" name="email" placeholder="Enter Email Addresss" required="required">
            <input id="phone1" type="number" name="email" placeholder="Enter Mobile Number" required="required">
            <small class="form-text text-muted">We'll never share your details with anyone else.</small><br>
            <input id="agreement" type="checkbox"> I agree to receive promotional messages from Cosmos Jaipur
            <input type="submit" val="Subscribe">
            <a href="#subscribe_box" onClick="$('#bothbox').hide(); $('#subscribe_box').show()"><i class="fa fa-toggle-left"></i> Choose another method</a>
          </form>
        </div>
      </div>
